<%= form_with(model: @patient, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :nome %><br>
    <%= form.text_field :nome, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :data_nascimento %><br>
    <%= form.text_field :data_nascimento, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cpf %><br>
    <%= form.text_field :cpf, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telefone %><br>
    <%= form.text_field :telefone, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :photo %><br>
    <%= form.file_field :photo, :class => 'form-control' %>
  </div>

  <button type="button" class="btn btn-primary btn-sm" onclick="location.href='/patients'">Voltar</button>
  <%= form.submit 'Salvar Paciente', :class => 'btn btn-primary btn-sm' %>

<% end %>