<%= render :partial => './div_top' %>

<div class="container-fluid">
  <div class="row">
    <%= render :partial => './div_left' %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">

      <br />
      <br />

      <form>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Nome</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%=@patient.nome %>">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">CPF</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%=@patient.cpf %>">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Telefone</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%=@patient.telefone %>">
          </div>
        </div>
        <div class="form-group row">
          <label for="staticEmail" class="col-sm-2 col-form-label">Nome</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%=@patient.data_nascimento %>">
          </div>
        </div>
        <% if @patient.photo.attached? %>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label ">Foto</label>
          <div class="col-sm-10">
            <%= image_tag @patient.photo %>
          </div>
        </div>
        <% end %>
        <br />
        <button type="button" class="btn btn-primary btn-sm" onclick="location.href='/comments/new/<%=@patient.cpf %>'">Cadastrar Evolução</button>
        <button type="button" class="btn btn-primary btn-sm" onclick="location.href='/vizualizar_comentarios/<%=@patient.cpf %>'">Visualizar Evoluções</button>

      </form>



    </main>


  </div>
</div>
