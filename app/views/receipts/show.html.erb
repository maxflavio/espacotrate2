<%= render :partial => './div_top' %>

<div class="container-fluid">
  <div class="row">
    <%= render :partial => './div_left' %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">

      <br />
      <br />

      <form>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Nome</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%=@receipt.patient.nome %>">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Valor</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%=@receipt.valor %>">
          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Descrição Tratamento</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%=@receipt.descricao_tratamento %>">
          </div>
        </div>

        <br />


      </form>



    </main>


  </div>
</div>
